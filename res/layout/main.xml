<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/stakerbackground">
        >
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="center">
        <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:id="@+id/nameTextField"
                android:maxLines="1"
                android:layout_alignLeft="@+id/phoneTextField" android:layout_alignParentTop="false"
                android:layout_marginTop="14dp" android:maxHeight="10dp" android:singleLine="true"
                android:layout_alignParentBottom="true" android:layout_marginBottom="200dp"/>
        <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Telephone"
                android:id="@+id/phoneTextField"
                android:layout_centerHorizontal="true" android:layout_alignParentTop="false"
                android:layout_marginTop="83dp" android:numeric="integer" android:layout_alignParentLeft="false"
                android:layout_marginLeft="53dp" android:layout_alignParentBottom="true"
                android:layout_marginBottom="150dp"/>
        <Button
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@drawable/blocknowbutton"
                android:id="@+id/banButton"
                android:checked="false"
                android:textSize="40dp"
                android:layout_alignLeft="@+id/nameTextField" android:layout_alignParentTop="false"
                android:layout_alignParentBottom="true" android:layout_marginBottom="100dp"/>

        <Button
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:background="@drawable/viewblockedpeoplebutton"
                android:id="@+id/viewBlockedButton" android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true" android:layout_marginBottom="20dp"/>
    </RelativeLayout>
</LinearLayout>

