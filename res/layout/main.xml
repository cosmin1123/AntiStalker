<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="center">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:id="@+id/editText"
                android:layout_alignLeft="@+id/editText1" android:layout_alignParentTop="true"
                android:layout_marginTop="20dp" android:layout_alignRight="@+id/editText1"/>
        <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Telephone"
                android:id="@+id/editText1"
                android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                android:layout_marginTop="83dp" android:numeric="integer" android:layout_alignParentLeft="true"
                android:layout_marginLeft="53dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BAN!!!"
                android:id="@+id/toggleButton"
                android:layout_alignParentTop="true"
                android:layout_marginTop="208dp" android:layout_centerHorizontal="true" android:checked="false"
                android:layout_alignRight="@+id/editText" android:layout_alignLeft="@+id/editText"/>
    </RelativeLayout>
</LinearLayout>

